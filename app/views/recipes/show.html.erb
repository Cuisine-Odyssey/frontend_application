<h1><%= @recipe.title %></h1>

<h3>Recipe Region: <%= @recipe.location %></h3>

<h3>Ingredients: </h3>

<div class="recipe-ingredients">
  <%= image_tag(@recipe.image) %>

  <ul>
  <% @recipe.combined.each do |k,v| %>
    <li><%= k %>, <%= v %></li>
    <% end %>
  </ul>  
</div>

<div class="recipe-instructions">
<h3>Instructions: </h3>
  <p><%= @recipe.instructions %></p>
</div>

<% if current_user %>
  <div class="like-or-dislike-buttons">
    <%= button_to "Like", "/recipes/#{@recipe.recipe_id}/like", method: :post, action: :like, params: { email: session[:email] }, remote: true %>
    
    <%= button_to "Dislike", "/recipes/#{@recipe.recipe_id}/dislike", method: :post, params: { email: session[:email] }, remote: true %>
  </div> 

  <div id="like-dislike-feedback">
    <% if @like == true %>
      <p>You have liked this recipe!</p>
    <% elsif @dislike == true %>
      <p>You hate this recipe!</p>
    <% end %>
  </div>
<% end %>
